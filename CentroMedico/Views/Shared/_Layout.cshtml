<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CentroMedico</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CentroMedico.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @if (Context.Session.GetString("IDUSUARILOGUEADO") != null)
        {
            <nav class="navbar navbar-expand-lg bg-body-tertiary" style="background-color: #e3f2fd;">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="CentroMedico" asp-action="Index">
                        <img src="~/images/cruzroja.png" style="width:40px;height:40px" />
                    </a>
                    <div class="collapse navbar-collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="CentroMedico" asp-action="Index">Home</a>
                            </li>
                            @if (Context.Session.GetInt32("TIPOUSUARILOGUEADO") == 1)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="CentroMedico" asp-action="ZonaAdmin">Mi zona</a>
                                </li>
                            }
                            else if (Context.Session.GetInt32("TIPOUSUARILOGUEADO") == 2)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="CentroMedico" asp-action="ZonaRecepcionista">Mi zona</a>
                                </li>
                            }
                            else if (Context.Session.GetInt32("TIPOUSUARILOGUEADO") == 3)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="CentroMedico" asp-action="ZonaMedico">Mi zona</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="CentroMedico" asp-action="ZonaPaciente">Mi zona</a>
                                </li>
                            }
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Opciones
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="CentroMedico" asp-action="CloseSession">Cerrar</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        }
        else
        {
            <nav class="navbar navbar-expand-lg bg-body-tertiary" style="background-color: #e3f2fd;">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="CentroMedico" asp-action="Index">
                        <img src="~/images/cruzroja.png" style="width:40px;height:40px" />
                    </a>
                    <div class="collapse navbar-collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="CentroMedico" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="CentroMedico" asp-action="Contacto">Contactanos</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Opciones
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="CentroMedico" asp-action="Login">Loguear</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="CentroMedico" asp-action="CreatePaciente">Registrar</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CentroMedico - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
