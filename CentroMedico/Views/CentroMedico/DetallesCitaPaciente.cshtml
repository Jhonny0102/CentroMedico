@model CentroMedico.Models.CitaDetalladaMedicos

@{
    ViewData["Title"] = "DetallesCitaPaciente";
}

<h1>Detalles Cita</h1>

<div>
    <a asp-action="CitasPaciente" class="btn btn-dark">Volver</a>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Model.Fecha.ToString("MMMM dd, yyyy")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hora)
        </dd>
        <dt class = "col-sm-2">
            Nombre Medico: 
        </dt>
        <dd class = "col-sm-10">
            @ViewData["NOMBREMEDICO"]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombrePaciente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombrePaciente) @Html.DisplayFor(model => model.ApellidoPaciente)
        </dd>
        <dt class = "col-sm-2">
            Motivo 
        </dt>
        <dd class = "col-sm-10">
            
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comentario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comentario)
        </dd>
    </dl>
</div>
