@model IEnumerable<CentroMedico.Models.CitaDetallado>

@{
    ViewData["Title"] = "ZonaAdminCitas";
}

<h1>ZonaAdminCitas</h1>

<p>
    <a asp-controller="CentroMedico" asp-action="ZonaAdmin" class="btn btn-info">Back</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeguimientoCita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comentario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeguimientoCita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comentario)
            </td>
            <td>
                    <a asp-controller="CentroMedico" asp-action="DetailsCita" asp-route-idCita="@item.Id">Detalles</a>
                    <a asp-controller="CentroMedico" asp-action="EditCita" asp-route-idCita="@item.Id">Editar</a>
                    <a asp-controller="CentroMedico" asp-action="DeleteCita" asp-route-idCita="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
