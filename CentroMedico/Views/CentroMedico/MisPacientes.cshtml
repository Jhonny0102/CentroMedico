@model IEnumerable<CentroMedico.Models.MedicosPacientes>

@{
    ViewData["Title"] = "MisPacientes";
}

<h1 style="text-align:center">Mis Pacientes</h1>

<p style="text-align:center">
    <a asp-controller="CentroMedico" asp-action="ZonaMedico" class="btn btn-dark">
        Back
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                <a asp-controller="CentroMedico" asp-action="DetailsPacienteMedico" asp-route-idpaciente="@item.Paciente" class="btn btn-outline-success" asp-route-idMedico="@item.Medico">Ver Informacion</a>
            </td>
        </tr>
}
    </tbody>
</table>
