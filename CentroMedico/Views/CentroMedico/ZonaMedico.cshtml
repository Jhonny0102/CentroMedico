@model Usuario

<h1 style="text-align:center">Zona Medicos: Bienvenido @Model.Nombre</h1>
<br />
<hr />
<br />
<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="card h-100">
            <img src="~/images/rueda.png" style="width:300px;height:300px" alt="...">
            <div class="card-body">
                <h5 class="card-title">Perfil</h5>
                <p class="card-text">Permite ver la informacion de tu perfil.</p>
                <div class="card-footer">
                    <a asp-controller="CentroMedico" asp-action="PerfilMedico" asp-route-idMedico="@Model.Id" class="btn btn-outline-success">Acceder</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100">
            <img src="~/images/rueda.png" style="width:300px;height:300px" alt="...">
            <div class="card-body">
                <h5 class="card-title">Pacientes</h5>
                <p class="card-text">Permite ver toda la informacion de tus pacientes.</p>
                <div class="card-footer">
                    <a asp-controller="CentroMedico" asp-action="MisPacientes" asp-route-idMedico="@Model.Id" class="btn btn-outline-success">Acceder</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100">
            <img src="~/images/rueda.png" style="width:300px;height:300px" alt="...">
            <div class="card-body">
                <h5 class="card-title">Citas</h5>
                <p class="card-text">Permite ver la informacion de todas tus citas y poder gestinarlas.</p>
                <div class="card-footer">
                    <a asp-controller="CentroMedico" asp-action="MisCitasMedico" class="btn btn-outline-success">Acceder</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100">
            <img src="~/images/rueda.png" style="width:300px;height:300px" alt="...">
            <div class="card-body">
                <h5 class="card-title">Peticiones Medicamentos</h5>
                <p class="card-text">Permite dar de alta/baja medicamentos e incluso puedes solicitar nuevos.</p>
                <div class="card-footer">
                    <a asp-controller="CentroMedico" asp-action="CreatePeticionSinIdMedico" asp-route-idMedico="@Model.Id" class="btn btn-outline-success">Solicitar</a>
                    <a asp-controller="CentroMedico" asp-action="CreatePeticionConIdMedico" asp-route-idMedico="@Model.Id" class="btn btn-outline-success">Alta/baja</a>
                </div>
            </div>
        </div>
    </div>
</div>